<%- include('include/custheader') %> 
<div class="container">
  <div class="row">
      <div class="col-md-12 mx-auto">
          <div class="mt-5">
            <h3 class="float-left">Customer</h3>
            <a href="/customers/add" class="btn btn-sm btn-primary float-right">Add Customer</a>
          </div>
          <table class="table table-striped table-bordered">
            <thead>
              <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Password</th>
                <th scope="col">Action</th>
            </tr>
            </thead>
            <tbody>
                <% customer.forEach(user => { %>
                    <tr>
                        <td><%= user.id %></td>
                        <td><%= user.customer_name %></td>
                        <td><%= user.password %></td>
                        <td><a href="customers/edit/<%= user.id %>" class="btn btn-sm btn-info">Edit</a><a href="customers/delete/<%= user.id %>" class="btn btn-sm btn-danger">Delete</a></td>
                    </tr>
                <% }) %>
            </tbody>
          </table>
      </div>
  </div>
</div>
<%- include('include/footer') %>
